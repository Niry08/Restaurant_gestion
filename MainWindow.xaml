<Window x:Class="Restaurant_gestion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant_gestion"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" VerticalAlignment="Center" FontSize="15" Padding="5">
            <MenuItem Header="Accueil">
                <MenuItem Header="Créer un restaurent" FontSize="12" Click="create_restaurent"/>
                <MenuItem Header="Ouvrir un fichier" FontSize="12" Click="open_restaurant" />
                <MenuItem Header="Enregistrer" FontSize="12"/>
                <MenuItem Header="Enregistrer sous" FontSize="12"/>
                <MenuItem Header="Supprimer restaurant" FontSize="12"/>
            </MenuItem>
            <MenuItem Header="Commandes">
                <MenuItem Header="Ajouter une commande" FontSize="12"/>
                <MenuItem Header="Supprimer une commande" FontSize="12"/>
                <MenuItem Header="Modifier une commande" FontSize="12"/>
            </MenuItem>
            <MenuItem Header="Stocks">
                <MenuItem Header="Étendu des stocks" FontSize="12" Click="etendu_stocks"/>
                <MenuItem Header="Achats" FontSize="12" Click="achats"/>
                <MenuItem Header="Fiances" FontSize="12" Click="finances"/>
            </MenuItem>
            <MenuItem Header="Employés">
                <MenuItem Header="Liste des employés" FontSize="12" Click="liste_employes"/>
                <MenuItem Header="Salaires" FontSize="12"/>
            </MenuItem>
        </Menu>

        <MenuItem Width="20" HorizontalAlignment="Right" Grid.Column="4" Grid.Row="0" Background="#0000" Click="exit" Margin="0,0,10,0">
            <MenuItem.Icon>
                <Image Source="/Restaurant_gestion;component/img/icon/exit.ico"/>
            </MenuItem.Icon>
        </MenuItem>

        <ContentControl x:Name="nom_restaurant" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"></ContentControl>
        <Label x:Name="restaurantName" Content="" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
        <Label x:Name="restaurantPlace" Content="" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="10" Margin="0,0,15,0"/>

        <ContentControl x:Name="etendu_stocks_control" Grid.Row="1" Grid.Column="0" Grid.RowSpan="7" Grid.ColumnSpan="5"></ContentControl>
    </Grid>
</Window>
