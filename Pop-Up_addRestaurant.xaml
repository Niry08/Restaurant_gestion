<Window x:Class="Restaurant_gestion.Pop_Up_addRestaurant"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant_gestion"
        mc:Ignorable="d"
        Title="Pop_Up_addRestaurant" Height="300" Width="520">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Ajout d'un restaurant" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold"/>

        <Label Content="Nom :" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox x:Name="textBoxName" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Width="150" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>

        <Label Content="Emplacement :" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox x:Name="textBoxPlace" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Width="150" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>

        <Label Content="xxx :" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox x:Name="textBoxXXX" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" Width="150" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>

        <Button x:Name="buttonConfirm" Content="Confirmer" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="5" Grid.RowSpan="2" Width="100" Height="30" Background="LightBlue" Click="buttonConfirm_click"/>
    </Grid>
</Window>
